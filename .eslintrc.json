{
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true,
    "jquery": true
  },
  "parser": "babel-eslint",
  "globals": {
    "app": true
  },
  "extends": [
    "standard",
    "plugin:react/recommended"
  ],
  "settings": {
    "react": {
      "createClass": "createReactClass",
      "pragma": "React",
      "version": "16.0"
    }
  },
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "plugins": [
    "react",
    "jest"
  ],
  "rules": {
    "comma-dangle": "off",
    "indent": [
      "error",
      2,
      {
        "ignoredNodes": [
          "JSXAttribute",
          "JSXSpreadAttribute"
        ],
        "SwitchCase": 1
      }
    ],
    "jest/no-large-snapshots": [
      "error",
      {
        "maxSize": 200,
        "whitelistedSnapshots": {
          "/path/to/file.js.snap": [
            "snapshot name 1"
          ]
        }
      }
    ],
    "react/jsx-indent-props": [
      "error",
      "first"
    ],
    "semi": [
      "error",
      "always"
    ],
    "space-before-function-paren": [
      "error",
      {
        "anonymous": "never",
        "named": "never"
      }
    ]
  }
}
